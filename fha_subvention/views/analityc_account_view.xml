<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="account_analytic_group_form_view" model="ir.ui.view">
        <field name="name">account.analytic.group.form</field>
        <field name="model">account.analytic.group</field>
        <field name="inherit_id" ref="analytic.account_analytic_group_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/group[2]" position="after">
                <div>
                    <label for="subvention">
                        Subvention
                    </label>
                    <field name="subvention"
                           widget="boolean_toggle"/>
                </div>
                <group attrs="{'invisible': [('subvention', '=', False)]}">
                    <group>
                        <field name="code"/>
                        <field name="partner_id"/>
                    </group>
                    <group>
                        <field name="date_init"/>
                        <field name="date_end"/>
                    </group>
                    <group>
                        <field name="currency_id" invisible="1"/>
                        <field name="total_subvention"
                               class="oe_inline"
                               widget="monetary"
                               options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                        <field name="percentage"
                               style="width: 117px"
                               string="Percentage %"/>
                        <field name="annual_subvention"
                               class="oe_inline"
                               widget="monetary"
                               options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                        <field name="annual_spend"
                               class="oe_inline"
                               widget="monetary"
                               options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                    </group>
                </group>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </xpath>
        </field>
    </record>

</odoo>



